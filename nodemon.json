{
  "watch": [
    "src",
    "prisma/schema.prisma",
    ".env"
  ],
  "ext": "js,json,prisma",
  "ignore": [
    "node_modules",
    "logs",
    "uploads",
    "*.test.js",
    "*.spec.js"
  ],
  "exec": "node src/index.js",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "colours": true,
  "verbose": true,
  "delay": 1000
}

